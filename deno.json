{
	"name": "@tadashi/pkg-cli",
	"version": "1.0.4",
	"license": "MIT",
	"exports": {
		".": "./src/mod.ts",
		"./cli": "./src/cli.ts"
	},
	"imports": {
		"@clack/prompts": "npm:@clack/prompts@0.8.2",
		"find-up-simple": "npm:find-up-simple@1.0.0",
		"kleur": "npm:kleur@4.1.5"
	},
	"publish": {
		"include": [
			"LICENSE",
			"README.md",
			"src/**/*.ts"
		],
		"exclude": [
			"test/"
		]
	},
	"tasks": {
		"build-pkg-apple-x86": "deno compile -WER --allow-run -o bin/pkg.x86_64-apple.run --target x86_64-apple-darwin src/cli.ts",
		"build-pkg-apple-arm": "deno compile -WER --allow-run -o bin/pkg.aarch64-apple.run --target aarch64-apple-darwin src/cli.ts",
		"build-pkg-linux-x86": "deno compile -WER --allow-run -o bin/pkg.x86_64-linux.run --target x86_64-unknown-linux-gnu src/cli.ts",
		"build-pkg-linux-arm": "deno compile -WER --allow-run -o bin/pkg.aarch64-linux.run --target aarch64-unknown-linux-gnu src/cli.ts",
		"build-pkg-windows-x86": "deno compile -WER --allow-run -o bin/pkg.x86_64-pc-windows.exe --target x86_64-pc-windows-msvc --icon ./npm.ico src/cli.ts",
		"build-pkg": "deno task build-pkg-apple-x86 && deno task build-pkg-apple-arm && deno task build-pkg-linux-x86 && deno task build-pkg-linux-arm && deno task build-pkg-windows-x86",
		"build": "deno task build-pkg",
		"clean": "rm -rf bin",
		"start": "deno run -WER --allow-run src/cli.ts",
		"test": "deno test -WERS --allow-run"
	},
	"test": {
		"include": [
			"test/**/*.spec.ts",
			"test/**/*.spec.js"
		],
		"exclude": [
			"test/fixures/"
		]
	},
	"lint": {
		"include": ["src/", "test/"],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-explicit-any"]
		}
	},
	"fmt": {
		"useTabs": true,
		"indentWidth": 4,
		"lineWidth": 160,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "always",
		"include": [
			"src/",
			"test/",
			"*.json",
			"*.jsonc",
			"*.md",
			"yaml",
			"yml"
		]
	}
}
