{
	"name": "@tadashi/pkg",
	"version": "1.0.0",
	"exports": "./mod.ts",
	"imports": {
		"@clack/prompts": "npm:@clack/prompts@0.8.2",
		"@std/assert": "jsr:@std/assert@1.0.8",
		"kleur": "npm:kleur@4.1.5"
	},
	"lint": {
		"include": ["src/", "test/"],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"useTabs": true,
		"indentWidth": 4,
		"lineWidth": 160,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "always",
		"include": [
			"src/",
			"test/",
			"*.json",
			"*.jsonc",
			"*.md",
			"yaml",
			"yml"
		]
	}
}
